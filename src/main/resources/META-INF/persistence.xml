<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="globemed-pu" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- Entity classes will be added here -->
    <class>com.globemed.system.model.User</class>
    <class>com.globemed.system.model.Patient</class>
    <class>com.globemed.system.model.Appointment</class>
    <class>com.globemed.system.model.Claim</class>
    <class>com.globemed.system.model.MedicalService</class>
    <class>com.globemed.system.model.Prescription</class>
    <class>com.globemed.system.model.PrescriptionItem</class>
    <class>com.globemed.system.model.BillableItem</class>
    <class>com.globemed.system.model.DoctorSchedule</class>
    <validation-mode>NONE</validation-mode>
    <properties>
      <!-- MySQL Database Connection Settings -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/globemed_db?serverTimezone=UTC"/>
      <!-- !! UPDATE THESE WITH YOUR USERNAME AND PASSWORD FROM STEP 0 !! -->
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="P@ssw0rd"/>
      <!-- Hibernate Settings for MySQL -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
